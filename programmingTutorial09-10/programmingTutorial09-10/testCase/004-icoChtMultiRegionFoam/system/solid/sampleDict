FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      sampleDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

interpolationScheme cellPoint;

setFormat       raw;

surfaceFormat   vtk;

sets
(
    line
    {
        type    face;
        axis    y;
        start   ( 0 -0.04 0 );
        end     ( 0  0.04 0 );
        nPoints 100;
    }
);

surfaces        ();

fields          ( T );


